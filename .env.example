# =======================================================
# Docker PHP Multiversion - Configurações de Ambiente
# =======================================================

# =======================================================
# BANCOS DE DADOS MYSQL (credenciais unificadas)
# =======================================================
MYSQL8_ROOT_PASSWORD=rootpass123
MYSQL8_DATABASE=app_database
MYSQL8_USER=app_user
MYSQL8_PASSWORD=apppass123

# MySQL 5.7 usa as mesmas credenciais para compatibilidade com PHPMyAdmin
MYSQL57_ROOT_PASSWORD=rootpass123
MYSQL57_DATABASE=app_database
MYSQL57_USER=app_user
MYSQL57_PASSWORD=apppass123

# =======================================================
# PORTAS DOS SERVIÇOS
# =======================================================
HTTP_PORT=80
HTTPS_PORT=443
MYSQL8_PORT=3306
MYSQL57_PORT=3307
REDIS_PORT=6379
PHPMYADMIN_PORT=8080

# =======================================================
# REDIS CACHE
# =======================================================
REDIS_PASSWORD=

# =======================================================
# CONFIGURAÇÕES GERAIS
# =======================================================
TZ=America/Sao_Paulo

# =======================================================
# CONFIGURAÇÕES DE PERFORMANCE
# =======================================================
MYSQL_INNODB_BUFFER_POOL_SIZE=134217728
MYSQL_MAX_CONNECTIONS=50

# =======================================================
# CONFIGURAÇÕES DE LOG E SSL
# =======================================================
LOG_LEVEL=warning
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
