# Configurações dos Bancos de Dados MySQL

# MySQL 8.0
MYSQL8_ROOT_PASSWORD=sistemas_root_2024
MYSQL8_DATABASE=sistemas_db
MYSQL8_USER=sistemas_user
MYSQL8_PASSWORD=sistemas_pass

# MySQL 5.7 (Legado)
MYSQL57_ROOT_PASSWORD=sistemas_root_legacy
MYSQL57_DATABASE=sistemas_legacy_db
MYSQL57_USER=sistemas_legacy_user
MYSQL57_PASSWORD=sistemas_legacy_pass

# Redis
REDIS_PASSWORD=

# Configurações de Timezone
TZ=America/Sao_Paulo

# Configurações de Performance
# Ajuste conforme os recursos da sua EC2 t3a.small (2GB RAM)
MYSQL_INNODB_BUFFER_POOL_SIZE=134217728
MYSQL_MAX_CONNECTIONS=50

# Configurações de Log
LOG_LEVEL=warning

# Configurações de SSL
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
